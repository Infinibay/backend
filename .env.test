# Local test database settings for Jest runs
# Ensure a local Postgres is running and the user/password are correct
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/infinibay_test?schema=public"

# Optional app vars used across services
FRONTEND_URL="*"
TOKENKEY=TEST_TOKEN
PORT=4001
RPC_URL="http://localhost:9090"

INFINIBAY_BASE_DIR=/opt/infinibay
INFINIBAY_STORAGE_POOL_NAME=infinibay
GRAPHIC_HOST=127.0.0.1
BRIDGE_NAME=br0
# ISO directories configuration
INFINIBAY_ISO_DIR=/opt/infinibay/iso
INFINIBAY_ISO_TEMP_DIR=/opt/infinibay/iso/temp
INFINIBAY_ISO_PERMANENT_DIR=/opt/infinibay/iso/permanent
VIRTIO_WIN_ISO_PATH=/opt/infinibay/iso/permanent/virtio-win.iso

