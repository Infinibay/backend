// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(uuid())
  First_Name   String
  Last_Name    String
  Email        String           @unique
  Password     String
  Deleted      Boolean
  User_Type    String
  token        String           @default("null")
  User_Image   String?          @unique 
  VM           VirtualMachine[]
  Notification Notification[]
  IOS          IOS[]
}

model VirtualMachine {
  id                  String         @id @default(uuid())
  GU_ID               String         @unique @default(uuid())
  Config              Json
  Status              Boolean
  VirtualMachine_Name String         @unique
  Title               String
  Description         String
  VM_Image            String?         @unique 
  user                User           @relation(fields: [userId], references: [id])
  userId              String
  Notification        Notification[]
}

model Notification {
  id      String          @id @default(uuid())
  Message String?
  vm      VirtualMachine? @relation(fields: [vm_id], references: [id])
  vm_id   String?
  user    User            @relation(fields: [userId], references: [id])
  userId  String
  Readed  Boolean
}

model IOS {
  id        String   @id @default(uuid())
  Name      String
  Type      String
  Size      Int
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
